	MENUITEM "View &Whitespace\tCtrl+Shift+8",		IDM_VIEWSPACE
  END

  POPUP "&Tools"
  BEGIN
	MENUITEM "&Compile\tCtrl+F7",			IDM_COMPILE
	MENUITEM "&Build\tF7",			IDM_BUILD
	MENUITEM "&Go\tF5",			IDM_GO
