	MENUITEM "Find...\tCtrl+F",			IDM_FIND
	MENUITEM "Find Next\tF3",			IDM_FINDNEXT
	MENUITEM "F&ind in Files...",			IDM_FINDINFILES
	MENUITEM "R&eplace...\tCtrl+H",			IDM_REPLACE
